    <%= image_tag("treelogo.png",class: "avatar")%>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto align-items-center">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to "Dashboard", dashboard_path, class: "nav-link" %>
        </li>
        <li class="nav-item active">
          <button class="nav-link nav-button" id="navbar-button" data-toggle="dropdown">Create asset</button>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Cash", new_asset_path(category: "cash"), class: "dropdown-lewagon dropdown-item" %>
            <%= link_to "Securities", new_asset_path(category: "securities"), class: "dropdown-lewagon dropdown-item" %>
            <%= link_to "Real Estate", new_asset_path(category: "real_estate"), class: "dropdown-lewagon dropdown-item" %>
            <%= link_to "Crytpo", new_asset_path(category: "crypto"), class: "dropdown-lewagon dropdown-item" %>
            <%= link_to "Cars", new_asset_path(category: "cars"), class: "dropdown-lewagon dropdown-item" %>
            <%= link_to "Others", new_asset_path(category: "others"), class: "dropdown-lewagon dropdown-item" %>
          </div>
        </li>
        <li>
         <i class="fas fa-bars nav-link" id="navbarDropdown" data-toggle="dropdown"></i>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Profile", edit_user_registration_path, class: "dropdown-lewagon dropdown-item" %>
            <%= link_to "Achievements", "#", class: "dropdown-lewagon dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-lewagon dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "About us", new_user_session_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Blog", articles_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Sign up", new_user_registration_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
