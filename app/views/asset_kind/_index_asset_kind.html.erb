<p> Total value - Euro <%= @total_value %></p>

<% AssetKind.categories.keys.each do |category| %>
  <p> <%= link_to category.capitalize, asset_index_path(query: category) %>
    <% if @categories_hash[:"#{category}"] != nil %>
      - EUR: <%= @categories_hash[:"#{category}"] / 100 %>
    <% else %>
      - EUR: 0
    <% end %>
  </p>
<% end %>
