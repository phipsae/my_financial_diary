<section class="margin-y-spacing-7">
  <div class="container">
        <h1>Your personal dashboard <%= @current_user.first_name %></h1>
  </div>
</section>

<section class="">
  <div class="container">
    <div class="row">
      <div class="col-12 col-lg-4">
        <%= render "assets/index_all_assets", all_assets_hash: @all_assets_hash %>
      </div>
      <div class="col-12 col-lg-8">
        <div class="activities activities-light margin-bottom-spacing-7" data-controller="chart-js" data-chart-js-hidden-class="hidden">
          <div class= "chart-btn-container">
            <button class="chart-btn" id="line-btn" data-action="click->chart-js#hiddenPie" data-chart-js-target="button">
            Line Chart
            </button>
            <button class="chart-btn" id="chart-btn" data-action="click->chart-js#hiddenLine" data-chart-js-target="button" >
            Pie Chart
            </button>
          </div>
          <div class="chart-container padding-x-spacing-5 padding-lg-x-spacing-4 padding-y-spacing-4">
            <span class="" data-chart-js-target="line"> <%= line_chart(@line_chart_data, legend: false, thousands: ",", prefix: "â‚¬", empty: "No asset created yet, add one") %> </span>
            <span class="hidden" data-chart-js-target="pie"> <%= pie_chart(@all_assets_hash, empty: "No asset created yet, add one") %> </span>
          </div>
          <span> Performance: <%= @performance %> % </span>
          <div class= "chart-btn-container mt-2" id="bottom">
            <button class="chart-btn" id="btn-all">
              <%= link_to "All", dashboard_path(period: "all") %>
            </button>
            <button class="chart-btn" id="btn-1" >
              <%= link_to "1 year", dashboard_path(period: "1year") %>
            </button>
            <button class="chart-btn" id="btn-3" >
              <%= link_to "3 years", dashboard_path(period: "3years") %>
            </button>
          </div>
        </div>
        <div data-controller="price-point">
          <div class="margin-top-spacing-7">
              <%= render "price_points/index_pp" %>
          </div>

          <div class="margin-top-spacing-7">
          <% if @price_points_count > 4 && params[:more] != "1" %>
            <%= form_with url: dashboard_path, method: :get, html: { class: 'mb-5', data: { price_point_target: 'form' } } do |f| %>
            <%= f.hidden_field :more,
                              value: 1,
                              data: {
                                price_point_target: 'more'
                              } %>
            <%= f.submit "Show all",
                        class: "cta cta-dark-with-border",
                        data: {
                          action: "click->price-point#dashboardUpdate"
                        } %>
            <% end %>
          <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


