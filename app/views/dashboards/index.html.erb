<section class="margin-y-spacing-7">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <h1>Your personal dashboard <%= @current_user.first_name %></h1>
      </div>
    </div>
  </div>
</section>

<section class="margin-y-spacing-7">
  <div class="container">
    <div class="row">
      <div class="col-12 col-lg-4">
        <%= render "assets/index_all_assets", all_assets_hash: @all_assets_hash %>
      </div>
      <div class="col-12 col-lg-8">
        <div class="activities activities-light padding-x-spacing-5 padding-lg-x-spacing-4 padding-y-spacing-4 margin-bottom-spacing-7" data-controller="chart-js" data-chart-js-hidden-class="hidden">
          <button class="btn btn-primary btn-lg" data-action="click->chart-js#hiddenPie" data-chart-js-target="button">
          Line Chart
          </button>
          <button class="btn btn-primary btn-lg" data-action="click->chart-js#hiddenLine" data-chart-js-target="button" >
          Pie Chart
          </button>
          <span> Performance: <%= @performance %> % </span>
          <span class="" data-chart-js-target="line" > <%= line_chart(@line_chart_data, legend: false, thousands: ",", prefix: "â‚¬" ) %> </span>
          <span class="hidden" data-chart-js-target="pie"> <%= pie_chart(@all_assets_hash) %> </span>
          <button class="btn btn-primary btn-lg" >
            <%= link_to "All", dashboard_path(period: "all") %>
          </button>
          <button class="btn btn-primary btn-lg" >
            <%= link_to "1 year", dashboard_path(period: "1year") %>
          </button>
          <button class="btn btn-primary btn-lg" >
            <%= link_to "3 years", dashboard_path(period: "3years") %>
          </button>
        </div>
        <div data-controller="price-point">
          <div class="margin-top-spacing-7">
              <%= render "price_points/index_pp" %>
          </div>

          <div class="margin-top-spacing-7">
          <% if @price_points_count > 4 && params[:more] != "1" %>
            <%= form_with url: assets_path, method: :get, html: { class: 'mb-5', data: { price_point_target: 'form' } } do |f| %>
            <%= f.hidden_field :more,
                              value: 1,
                              data: {
                                price_point_target: 'more'
                              } %>
            <%= f.hidden_field :query,
                              value: @category,
                              data: {
                                price_point_target: 'query'
                              } %>
            <%= f.submit "Show all",
                        class: "cta cta-dark-with-border",
                        data: {
                          action: "click->price-point#dashboardUpdate"
                        } %>
            <% end %>
          <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
