<section class="margin-y-spacing-7">
  <div class="container">
    <div class="row justify-content-center">
      <div class="d-flex col-12 col-lg-10 padding-lg-left-spacing-0 inner-container-light inner-container">
        <div class="d-none d-lg-block image-lg-form-width margin-lg-right-spacing-4">
          <%= image_tag("skyline.jpg",  class:"inner-container-left-border-radius")%>
        </div>
      <div class="d-lg-block image-form-width image-lg-form-width margin-y-spacing-7">
        <h2 class="text-center">Forgot your password?</h2>

        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <div class="form-row margin-bottom-spacing-5">
              <div class="col-12">
                <%= f.input :email,
                            required: true,
                            autofocus: true,
                            input_html: { autocomplete: "email" } %>
              </div>
            </div>
          </div>

            <div class="form-actions margin-bottom-spacing-5 w-100">
              <%= f.button :submit, "Reset password", class: "cta cta-light-with-border w-100" %>
            </div>
        <% end %>
        <div class="text-center">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</section>
